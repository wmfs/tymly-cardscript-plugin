{
  "Comment": "State machine to delete a board that the user is currently watching.",
  "version": "1.0",
  "StartAt": "UnwatchBoard",
  "States": {
    "UnwatchBoard": {
      "Type": "Task",
      "Resource": "module:unwatchBoard",
      "InputPath": "$",
      "Next": "UpdateSolr"
    },
    "UpdateSolr": {
      "Type": "Task",
      "Resource": "module:updateDocsBySearchDoc",
      "InputPath": "$.subscriptionId",
      "ResourceConfig": {
        "searchDoc": "tymly_watchedBoards"
      },
      "End": true
    }
  },
  "restrictions": [
    {
      "roleId": "$authenticated",
      "allows": [
        "*"
      ]
    }
  ]
}