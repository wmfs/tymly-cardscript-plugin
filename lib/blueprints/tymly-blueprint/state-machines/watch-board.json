{
  "Comment": "State machine to allow a user.",
  "version": "1.0",
  "StartAt": "WatchBoard",
  "States": {
    "WatchBoard": {
      "Type": "Task",
      "Resource": "module:watchBoard",
      "InputPath": "$",
      "Next": "UpdateSolr"
    },
    "UpdateSolr": {
      "Type": "Task",
      "Resource": "module:updateDocsBySearchDoc",
      "InputPath": "$.subscriptionId",
      "ResourceConfig": {
        "searchDoc": "tymly_watchedBoards"
      },
      "End": true
    }
  },
  "restrictions": [
    {
      "roleId": "$authenticated",
      "allows": [
        "*"
      ]
    }
  ]
}
